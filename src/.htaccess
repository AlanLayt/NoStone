php_value upload_max_filesize 10M
php_value post_max_size 20M
php_value memory_limit 32M


RewriteEngine On
RewriteRule ^home/?$ index.php?view=home&obj=$2 [L]
RewriteRule ^uncover/?$ index.php?view=uncover&obj=$2 [L]
RewriteRule ^materials/?$ index.php?view=materials&obj=$2 [L]
RewriteRule ^random/?$ index.php?view=random&obj=$2 [L]



RewriteRule ^([^/\.]+)/([^/\.]+)/?$ index.php?view=$1&obj=$2 [L]
RewriteRule ^([^/\.]+)/post/([^/\.]+)/?$ index.php?view=post&uid=$1&post=$2 [L]
RewriteRule ^([^/\.]+)/?$ index.php?view=user&uid=$1 [L]